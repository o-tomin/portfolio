<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/contacts_horizontal_padding">

    <TextView
        android:id="@+id/name"
        style="@style/BodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/contacts_vertical_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/loading" />

    <TextView
        android:id="@+id/title"
        style="@style/BodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/contacts_vertical_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:text="@string/loading" />

    <TextView
        android:id="@+id/location"
        style="@style/BodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/contacts_vertical_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="@string/loading" />

    <TextView
        android:id="@+id/email"
        style="@style/BodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/contacts_vertical_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location"
        tools:text="@string/loading" />

    <ImageButton
        android:id="@+id/copy_email"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="10dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_copy"
        app:layout_constraintBottom_toBottomOf="@+id/email"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintTop_toTopOf="@+id/email"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/linkedin"
        style="@style/BodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/contacts_vertical_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:text="@string/loading" />

    <ImageButton
        android:id="@+id/copy_linkedin"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="10dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_copy"
        app:layout_constraintBottom_toBottomOf="@+id/linkedin"
        app:layout_constraintStart_toEndOf="@+id/linkedin"
        app:layout_constraintTop_toTopOf="@+id/linkedin"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/phone"
        style="@style/BodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/contacts_vertical_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linkedin"
        tools:text="@string/loading" />

    <ImageButton
        android:id="@+id/copy_phone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="10dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_copy"
        app:layout_constraintBottom_toBottomOf="@+id/phone"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toTopOf="@+id/phone"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>